#!/usr/bin/env -S elisp
;; mode: -*- emacs-lisp -*-
;; cursed? I think not

(let* ((notif-str (concat " " (or args (vz/fread stdin)) " "))
       (notif-buf (get-buffer-create "*notification*"))
       (lines     (split-string notif-str "\n"))
       (wh        (length lines))
       (ww        (apply #'max (seq-map #'length lines)))
       (frame     (make-frame
                    `((width  . ,ww)
                      (height . ,wh)
                      (top    .  20)
                      (left   . -20)
                      (name   . "notification"))))
       (centered? (perfect-margin-mode)))
  (select-frame frame)
  (switch-to-buffer notif-buf)
  (org-mode)
  (unless centered? (perfect-margin-mode))
  (insert notif-str)
  (setq mode-line-format nil)
  (run-at-time 5 nil
         `(lambda ()
            (delete-frame ,frame)
            (kill-buffer ,notif-buf))))
